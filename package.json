{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "supergraph:compose": "rover supergraph compose --elv2-license accept --config ./supergraph-config.yaml > ./services/api-gateway/schema.graphql",
    "supergraph:compose:dev": "nodemon -e graphql --watch contracts/graphql --exec \"yarn run supergraph:compose\"",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"services/**/*.ts\" \"libs/**/*.ts\" \"contracts/**/*.graphql\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,services,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/backend/test/jest-e2e.json",
    "start:dev api-gateway": "nest start --watch api-gateway",
    "start:dev affiliate-network": "nest start --watch affiliate-network",
    "start:dev traffic-source": "nest start --watch traffic-source",
    "start:dev offer": "nest start --watch offer",
    "start:dev campaign": "nest start --watch campaign",
    "start:dev click": "nest start --watch click"
  },
  "dependencies": {
    "@apollo/gateway": "^2.0.2",
    "@apollo/subgraph": "^2.0.2",
    "@grpc/grpc-js": "^1.7.3",
    "@nestjs/apollo": "^10.0.11",
    "@nestjs/common": "^9.2.0",
    "@nestjs/core": "^9.2.0",
    "@nestjs/graphql": "^10.0.11",
    "@nestjs/microservices": "^9.2.0",
    "@nestjs/platform-express": "^9.2.0",
    "@nestjs/typeorm": "^9.0.1",
    "apollo-server-express": "^3.7.0",
    "axios": "^1.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dataloader": "^2.1.0",
    "dotenv": "^16.0.1",
    "graphql": "^16.4.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "nanoid": "3",
    "nanoid-dictionary": "^4.3.0",
    "pg": "^8.7.3",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.6",
    "typeorm-naming-strategies": "^4.1.0",
    "ua-parser-js": "^1.0.32",
    "weighted": "^1.0.0"
  },
  "devDependencies": {
    "@apollo/rover": "^0.10.0",
    "@graphql-codegen/add": "^3.2.3",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/typescript": "^2.8.5",
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.2.2",
    "@types/lodash": "^4.14.191",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.11",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-boundaries": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.3.1",
    "nestjs-proto-gen-ts": "^1.0.21",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@tds/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
