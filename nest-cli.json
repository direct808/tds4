{
  "collection": "@nestjs/schematics",
  "root": "services/api-gateway",
  "sourceRoot": "services/api-gateway/src",
  "monorepo": true,
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "services/api-gateway/tsconfig.app.json"
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "services/api-gateway",
      "entryFile": "main",
      "sourceRoot": "services/api-gateway",
      "compilerOptions": {
        "tsConfigPath": "services/api-gateway/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "outDir": "dist/services/api-gateway"
          },
          {
            "include": "schema.graphql",
            "outDir": "dist/services/api-gateway"
          }
        ]
      }
    },
    "affiliate-network": {
      "type": "application",
      "root": "services/affiliate-network",
      "entryFile": "src/main",
      "sourceRoot": "services/affiliate-network",
      "compilerOptions": {
        "tsConfigPath": "services/affiliate-network/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "outDir": "dist/services/affiliate-network"
          },
          {
            "include": "affiliate-network.graphql",
            "outDir": "dist/services/affiliate-network"
          }
        ]
      }
    },
    "traffic-source": {
      "type": "application",
      "root": "services/traffic-source",
      "entryFile": "src/main",
      "sourceRoot": "services/traffic-source",
      "compilerOptions": {
        "tsConfigPath": "services/traffic-source/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "outDir": "dist/services/traffic-source"
          },
          {
            "include": "traffic-source.graphql",
            "outDir": "dist/services/traffic-source"
          }
        ]
      }
    },
    "common": {
      "type": "lib",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "offer": {
      "type": "application",
      "root": "services/offer",
      "entryFile": "src/main",
      "sourceRoot": "services/offer",
      "compilerOptions": {
        "tsConfigPath": "services/offer/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "outDir": "dist/services/offer"
          },
          {
            "include": "offer.graphql",
            "outDir": "dist/services/offer"
          }
        ]
      }
    }
  }
}
