{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": [
      "ES2021"
    ],
    "allowJs": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@tds/contracts": [
        "contracts/src"
      ],
      "@tds/contracts/*": [
        "contracts/src/*"
      ],
      "@tds/common": [
        "libs/common/src"
      ],
      "@tds/common/*": [
        "libs/common/src/*"
      ]
    }
  }
}
